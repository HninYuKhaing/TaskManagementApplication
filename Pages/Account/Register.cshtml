@page
@model RegisterModel

<div class="card bg-light register-form">
    <article class="card-body mx-auto" style="max-width: 400px;">
        <h4 class="card-title mt-3 text-center">Create Account</h4>
        <p class="text-center">Create account here</p>


        <form method="post">

            <div class="form-group input-group">
                @* <label asp-for="Input.Username">User Name</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input asp-for="Input.Username" class="form-control" placeholder="User Name" />
            </div>
            <span asp-validation-for="Input.Username" class="text-danger"></span>


            <div class="form-group  input-group">
                @* <label asp-for="Input.Email"></label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="Email address" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>


            <div class="form-group input-group">
                @* <label asp-for="Input.Password"></label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Create password" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>


            <div class="form-group input-group">
                @* <label asp-for="Input.FirstName">First Name</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
            </div>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>


            <div class="form-group input-group">
                @* <label asp-for="Input.LastName">Last Name</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
            </div>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>


            <div class="form-group input-group">
                @* <label asp-for="Input.RoleId">Role</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                </div>
                <select asp-for="Input.RoleId" class="form-control">
                    <option value="2">User</option>
                    <option value="1">Admin</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </div>
        </form>


    </article>
</div>