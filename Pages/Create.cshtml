@page
@model CreateModel
@{
    ViewData["Title"] = "Create Task";
}

<div class="card bg-light register-form">
    <article class="card-body mx-auto" style="max-width: 400px;">
        <h4 class="card-title mt-3 text-center">Create Task</h4>
        <p class="text-center">Create task here</p>

        <form method="post">
            <div class="form-group input-group">
                @* <label asp-for="TaskItem.Title"></label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user">Title</i> </span>
                </div>
                <input asp-for="TaskItem.Title" class="form-control" placeholder="Title" />
            </div>
            <span asp-validation-for="TaskItem.Title" class="text-danger"></span>

            <div class="form-group input-group">
                @* <label asp-for="TaskItem.Description"></label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-align-justify">Description</i> </span>
                </div>
                <input asp-for="TaskItem.Description" class="form-control" placeholder="Description" />
            </div>
            <span asp-validation-for="TaskItem.Description" class="text-danger"></span>

            <div class="form-group input-group">
                @* <label asp-for="TaskItem.ProjectId">Project</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-users">Project</i> </span>
                </div>
                <select asp-for="TaskItem.ProjectId" class="form-control" asp-items="Model.ProjectList">
                    <option value="">-- Select Project --</option>
                </select>
            </div>
            <span asp-validation-for="TaskItem.ProjectId" class="text-danger"></span>

            <div class="form-group input-group">
                @* <label asp-for="TaskItem.DueDate">Due Date</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-calendar">Due Date</i> </span>
                </div>
                <input asp-for="TaskItem.DueDate" class="form-control" />
            </div>
            <span asp-validation-for="TaskItem.DueDate" class="text-danger"></span>

            <div class="form-group input-group">
                @* <label asp-for="TaskItem.StatusId">Status</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-bookmark">Status</i> </span>
                </div>
                <select asp-for="TaskItem.StatusId" class="form-control" asp-items="Model.StatusList">
                    <option value="">-- Select Status --</option>
                </select>
            </div>
            <span asp-validation-for="TaskItem.StatusId" class="text-danger"></span>

            <div class="form-group input-group">
                @* <label asp-for="TaskItem.PriorityId">Priority</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lightbulb-o">Priority</i> </span>
                </div>
                <select asp-for="TaskItem.PriorityId" class="form-control" asp-items="Model.PriorityList">
                    <option value="">-- Select Priority --</option>
                </select>
            </div>
            <span asp-validation-for="TaskItem.PriorityId" class="text-danger"></span>

            <div class="form-group input-group">
                @* <label asp-for="TaskItem.AssigneeId">Assignee</label> *@
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user-plus">Assignee</i> </span>
                </div>
                <select asp-for="TaskItem.AssigneeId" class="form-control" asp-items="Model.UserList">
                    <option value="">-- Select Assignee --</option>
                </select>
            </div>
            <span asp-validation-for="TaskItem.AssigneeId" class="text-danger"></span>

            <button type="submit" class="btn btn-primary btn-block">Create</button>
            <a asp-page="Index">Back to List</a>
        </form>

    </article>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
